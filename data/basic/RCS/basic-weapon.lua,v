Objtype {
    name = "basic-shotgun-projectile",
    icon = "/basic/weapon/shotgun/projectile",
    nonproxy_init = function (self)
	function self:collide_hook (obj)
	    obj:receive_damage (10)
	    self:destroy ()
	end
	function self:tile_collide_hook ()
	    self:destroy ()
	end	
    end
